<h1>Lists#show</h1>
<p>Find me in app/views/lists/show.html.erb</p>
<%= @list.name %>
<%# <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
<ul>
<% @list.bookmarks.each do |bookmark| %>
<li>
<h5><%= bookmark.movie.title %></h5>
<p><%=  bookmark.comment %></p>
</li>
<%= link_to "Delete", bookmark_path(bookmark),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<% end %>
</ul>
<%= link_to "Back to lists", lists_path%>
<%= link_to "Add a bookmark", new_list_bookmark_path(@list)%>
